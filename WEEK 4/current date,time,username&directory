current_date=$(date)
current_user=$(whoami)
current_directory=$(pwd)

echo "current date and time: $current_date"
echo "current user: $current_user"
echo "current working directory: $current_directory"

output

current date and time: Thu Mar  6 11:39:43 AM IST 2025
current user: mca
current working directory: /home/mca
